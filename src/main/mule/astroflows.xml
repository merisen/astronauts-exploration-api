				<ee:transform doc:name="json-array-to-the-json" doc:id="61f87b5d-d02e-4528-b532-e15d9333a5c4">
					<ee:message>
					</ee:message>
					<ee:variables >
						<ee:set-variable variableName="output" ><![CDATA[%dw 2.0
output application/json
---
{(payload)}]]></ee:set-variable>
					</ee:variables>
				</ee:transform>
